sudo pip3 install --upgrade adafruit-platformdetect



import time
import board
import digitalio
import neopixel
from adafruit_platformdetect import Detector

# 라즈베리 파이 모델 확인
detector = Detector()
if not detector.board.any_raspberry_pi:
    raise RuntimeError("Not running on a Raspberry Pi!")

print("Running on a Raspberry Pi")

LED_PIN = board.D18  # 사용 중인 핀을 설정합니다.
LED_COUNT = 3  # LED 개수를 설정합니다.

pixels = neopixel.NeoPixel(LED_PIN, LED_COUNT)

# 색상을 변경하는 함수
def set_color(pixels, colors):
    for i in range(len(pixels)):
        pixels[i] = colors[i]
    pixels.show()

# 메인 루프
try:
    while True:
        # 0번째 LED 빨간색, 1번째 LED 노란색, 2번째 LED 초록색
        set_color(pixels, [(255, 0, 0), (255, 255, 0), (0, 255, 0)])
        time.sleep(5)
        # 0번째 LED 초록색, 1번째 LED 빨간색, 2번째 LED 노란색
        set_color(pixels, [(0, 255, 0), (255, 0, 0), (255, 255, 0)])
        time.sleep(5)
        # 0번째 LED 노란색, 1번째 LED 초록색, 2번째 LED 빨간색
        set_color(pixels, [(255, 255, 0), (0, 255, 0), (255, 0, 0)])
        time.sleep(5)

except KeyboardInterrupt:
    # 프로그램이 종료될 때 LED를 끕니다.
    pixels.fill((0, 0, 0))
    pixels.show()

실행은
sudo python3 /home/PDY/cos/cos.py
