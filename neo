# 라즈베리 파이 모델 확인
from adafruit_blinka.agnostic import board_id
print("Board ID: ", board_id)

LED_PIN = board.D18  # 사용 중인 핀을 설정합니다.
LED_COUNT = 3  # LED 개수를 설정합니다.

pixels = neopixel.NeoPixel(LED_PIN, LED_COUNT)

pixels[0] = (255, 0, 0)  # 첫 번째 LED를 빨간색으로 켭니다.





import time
import board
import neopixel

# 라즈베리 파이 모델 확인
from adafruit_blinka.agnostic import board_id
print("Board ID: ", board_id)

LED_PIN = board.D18  # 사용 중인 핀을 설정합니다.
LED_COUNT = 3  # LED 개수를 설정합니다.

# NeoPixel 객체 생성
pixels = neopixel.NeoPixel(LED_PIN, LED_COUNT)

# 색상 정의
RED = (255, 0, 0)
YELLOW = (255, 255, 0)
GREEN = (0, 255, 0)

while True:
    # 빨간색으로 설정
    pixels.fill(RED)
    time.sleep(5)

    # 노란색으로 설정
    pixels.fill(YELLOW)
    time.sleep(5)

    # 초록색으로 설정
    pixels.fill(GREEN)
    time.sleep(5)


sudo python3 /home/PDY/cos/cos.py
