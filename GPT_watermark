from torchvision import models, transforms
from PIL import Image
import torch

def is_ai_generated(image_path: str, threshold: float = 0.5) -> bool:
    """
    AI ìƒì„± ì´ë¯¸ì§€ ì—¬ë¶€ë¥¼ íŒë³„ (ì˜ˆì‹œ ëª¨ë¸ ì‚¬ìš©)
    """
    image = Image.open(image_path).convert("RGB")

    preprocess = transforms.Compose([
        transforms.Resize((224, 224)),
        transforms.ToTensor(),
    ])

    model = models.resnet18(pretrained=True)  # âš ï¸ ì‹¤ì œë¡œëŠ” fine-tuningëœ ëª¨ë¸ í•„ìš”
    model.eval()

    input_tensor = preprocess(image).unsqueeze(0)
    with torch.no_grad():
        outputs = model(input_tensor)
    
    prob_fake = torch.sigmoid(outputs[0][0]).item()  # ì˜ˆì‹œ. ì‹¤ì œ ëª¨ë¸ì— ë”°ë¼ ë‹¤ë¦„

    print(f"AI ìƒì„± í™•ë¥ : {prob_fake:.2f}")
    return prob_fake >= threshold

