from PIL import ImageDraw, ImageFont

def add_watermark(image_path: str, output_path: str, text: str = "Generated by AI"):
    image = Image.open(image_path).convert("RGBA")
    watermark_layer = Image.new("RGBA", image.size, (0, 0, 0, 0))

    draw = ImageDraw.Draw(watermark_layer)
    font = ImageFont.truetype("arial.ttf", 36)  # NanumGothic-Regular.ttf ë„ ê°€ëŠ¥

    text_size = draw.textsize(text, font=font)
    position = (image.width - text_size[0] - 20, image.height - text_size[1] - 20)
    draw.text(position, text, font=font, fill=(255, 0, 0, 128))  # ë°˜íˆ¬ëª… ë¹¨ê°•

    watermarked = Image.alpha_composite(image, watermark_layer)
    watermarked.convert("RGB").save(output_path)

    print(f"ğŸ’§ ì›Œí„°ë§ˆí¬ê°€ ì‚½ì…ëœ ì´ë¯¸ì§€ ì €ì¥ë¨: {output_path}")
