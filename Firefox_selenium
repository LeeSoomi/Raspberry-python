from selenium import webdriver
from selenium.webdriver.firefox.service import Service
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import time

# Firefox 옵션 설정
options = webdriver.FirefoxOptions()
# options.add_argument("--headless")  # GUI 없이 실행하려면 주석 해제

# Firefox 서비스 설정
service = Service(executable_path="/usr/local/bin/geckodriver")

# Firefox 드라이버 시작
driver = webdriver.Firefox(options=options, service=service)

try:
    # 웹페이지 열기
    driver.get("https://www.youtube.com/results?search_query=행복하게+해주는+노래")

    # 검색창이 로드될 때까지 기다리기 (최대 10초)
    search_box = WebDriverWait(driver, 10).until(
        EC.presence_of_element_located((By.XPATH, '//*[@id="search"]'))
    )

    # 검색창에 텍스트 입력 후 엔터 키 전송
    search_box.send_keys("행복하게 해주는 노래")
    search_box.submit()

    # 유튜브 영상 재생 처리 대기
    video = WebDriverWait(driver, 10).until(
        EC.element_to_be_clickable((By.XPATH, '//*[@id="video-title"]'))
    )
    video.click()

    # 비디오가 재생될 때까지 대기
    time.sleep(10)

except Exception as e:
    print(f"Error occurred: {e}")
finally:
    driver.quit()


